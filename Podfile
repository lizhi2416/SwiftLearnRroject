# platform :ios, '9.0'

target 'SwiftLearnRroject' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SwiftLearnRroject

  target 'SwiftLearnRrojectTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SwiftLearnRrojectUITests' do
    inherit! :search_paths
    # Pods for testing
  end

  #约束
  pod 'SnapKit', '~> 5.0.0'
  #语法糖，init写法更简单
  pod 'Then'
  #网络请求库Alamofire的再次封装
  pod 'Moya'
  #json model 相互转化
  pod 'HandyJSON'
  #异步加载图片类似OC的YYImage和SDWebImage
  pod 'Kingfisher'
  #复用所有的view
  pod 'Reusable'
  pod 'LLCycleScrollView'
  pod 'MJRefresh'
  pod 'MBProgressHUD'
  pod 'HMSegmentedControl'
  pod 'IQKeyboardManagerSwift'
  pod 'EmptyDataSet-Swift'
  #新的导航栏按钮位置偏移的解决方案,兼容iOS11及以上,可自定义间距,同时兼容性更好
